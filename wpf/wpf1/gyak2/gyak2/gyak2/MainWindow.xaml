            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="91.17"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="csuszka3" HorizontalAlignment="Left" Margin="371,355,0,0" VerticalAlignment="Top" Width="120" Maximum="1" Value="1" LargeChange="0.1" ValueChanged="Slider_ValueChanged"/>

