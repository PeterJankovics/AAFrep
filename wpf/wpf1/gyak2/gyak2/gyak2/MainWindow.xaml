        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="kep1" HorizontalAlignment="Left" Height="100" Margin="104,50,0,0" VerticalAlignment="Top" Width="100" Source="/magyar_cimer.jpg"/>
        <Image x:Name="kep4" HorizontalAlignment="Left" Height="100" Margin="622,43,0,0" VerticalAlignment="Top" Width="100" Source="/IMG_20220523_131210.jpg"/>
