        <Image x:Name="kep3" HorizontalAlignment="Left" Height="100" Margin="609,315,0,0" VerticalAlignment="Top" Width="100" Source="/gomb-removebg-preview.png"/>
        <Slider x:Name="csuszka2" HorizontalAlignment="Left" Margin="78,223,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5" Maximum="1" Value="1" LargeChange="0.1" ValueChanged="Slider_ValueChanged_1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-91.002"/>
