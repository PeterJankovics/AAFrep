                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Slider x:Name="csuszka1" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Width="120" Maximum="1" Value="1" LargeChange="0.1" ValueChanged="Slider_ValueChanged_2"/>
